<% if @location.present? && @location.lat != nil && @location.long != nil %>
    <% maps_src = "https://www.google.com/maps/embed/v1/place?q=" + @location.lat.to_s + "," + @location.long.to_s + "&key=" + @google_api_key%>
    <iframe width="600" height="450" frameborder="0" style="border:0" src=<%= maps_src %>></iframe>
<% else %>
    <h3>No Location Available</h3>
<% end %>